@model IEnumerable<MvcMovie.Models.Movie>
@{
    ViewData["Title"] = "My Movies";
    var years = ViewData["Years"] as List<int> ?? new List<int>();
    var selectedYear = ViewData["SelectedYear"] as int?;
}

<h2>My Movies</h2>

<form method="get" class="mb-3">
    <label for="year">Filter by Year:</label>
    <select id="year" name="year" class="form-control" style="padding: 8px;">
        <option value="">All Years</option>
        @foreach (var year in years)
        {
            <option value="@year" selected="@(selectedYear == year ? "selected" : null)">@year</option>
        }
    </select>
    <button type="submit" class="btn btn-primary mt-2">Filter</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.ReleaseDate.ToString("yyyy-MM-dd")</td>
                <td>@movie.Genre</td>
                <td>@movie.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
